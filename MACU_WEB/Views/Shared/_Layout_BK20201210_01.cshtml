<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <script type="text/javascript" charset="utf-8" src="~/Scripts/Common/JS_UI.js"></script>

    <title>@ViewBag.Title - MACU ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="fixed-sidebar full-height-layout gray-bg">
    @* RenderPage("~/Views/Shared/header.cshtml") *@
    <div id="wrapper">
        <!--左測導航開始-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    @* Html.Raw(ViewBag.myMenus) *@
                </ul>
            </div>
        </nav>
        <!--左測導航結束-->
        <!--右側部分開始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">

            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            @*
                                @Html.DisplayNameFor(model => model.Name)：@ViewBag.MultiLang
                            *@
                        </li>
                        &nbsp;
                        <li>
                            @using (Html.BeginForm())
                            {
                            <li>
                                @* Html.DisplayName("Choose".ToAutoMultiLang()) *@
                            </li>
                            <li>
                                @* Html.DropDownListFor(model => model.Name, (IEnumerable<SelectListItem>)ViewData["MultiLangList"]) *@
                                @*@Html.DropDownListFor(model => model.Name, (IEnumerable<SelectListItem>)ViewData["LangSelectList"])*@
                            </li>
                            <input type="submit" value="@Html.DisplayName( "Submit")">
                            }
                         </li>
                         <li>
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <span class="text-muted text-xs block">@ViewBag.LoginUserName <b class="caret"></b></span>
                                }
                         </li>
                         <li>
                                <a href="javascript:void(0)" onclick="UpdatePassWord()"> <i class="fa fa-unlink"></i> ChangePW </a>
                         </li>
                         <li>
                                <a href="@Url.Content("~/FrameWork/Login/logout")"> <i class="fa fa-sign-out"></i> LogOut </a>
                         </li>
                    </ul>
                </nav>
            </div>
        

            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        @*
                            <a href="javascript:;" class="active J_menuTab" data-id=@Url.Action("Welcome","Control")>@("HomePage".ToAutoMultiLang())</a>
                        *@
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="roll-nav roll-right dropdown J_tabClose">
                    <a href="#" data-toggle="dropdown" class="dropdown-toggle"> CloseOperation <b class="caret bottom-up"></b></a>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabCloseAll">
                            <a>CloseAllTabs</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>CloseOtherTabs</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row J_mainContent" id="content-main" width="100%" height="100%" style="background-color:white;overflow:auto;-webkit-overflow-scrolling:touch;">
                <!--若需要改回iframe版本 請將下一行的div改為iframe-->
                @*
                    <iframe class="J_iframe" name="iframe0" width="100%" height="100%" style="background-color:white;" src=@Url.Action("Welcome","Control") frameborder="0" data-id=@Url.Action("Welcome","Control") seamless></iframe>
                *@
            </div>
            <div class="footer">
                <div class="pull-right">
                    CopyrightStatement <a href="https://www.macu.com/" target="_blank">MACU_MERP</a>
                    V.@* typeof(TSTORE.MSP.MVC.Web.UI.Controllers.HomeController).Assembly.GetName().Version.ToString() *@
                </div>
            </div>

        </div>
        <!--右側部分結束-->
    </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - MACU ASP.NET 應用程式</p>
                <button class="btn btn-primary" name="Query" type="button" onclick="JsFunLOADING_SHOW(true);">處理中</button>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
